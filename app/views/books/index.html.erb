<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <th>Title</th>
      <th>Body<th>
      <th colspan="3"></th>
    </thead>

  
   <tbody>
     <%@books.each do |book| %>
       <tr>
       <td><%=book.title %></td>
       <td><%=book.body %></td>
       <td><%= link_to "Show",book_path(book.id) %></td>
       <td><%= link_to "Edit", edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete,data: { confirm: '本当に消しますか？' }%></td>
       </tr>
     <% end %>
   </tbody>
</table>


  <h2>New book</h2>
  
  <% if @books.errors.any? %>
    <%= @books.errors.count %>件のエラーが発生しました
    <% @books.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: @books, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
</body>